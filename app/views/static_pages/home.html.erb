<% if signed_in? %>
	<div class='row'>
		<aside class='span4'>
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/stats' %>
			</section>
			<section>
				<%= render 'shared/micropost_form' %>
			</section>
		</aside>
		<div class='span8'>
			<h3>Posts Feed</h3>
			<%= render 'shared/feed' %>
		</div>
	</div>
<% else %>
	<div class="center hero-unit">
		<h1>Welcome to the Rails App</h1>
		<p>This is the <%= yield(:title) %> page. It's wonderful day today</p>

		<%= link_to "Sign up now", signup_path, class: "btn btn-large btn-primary" %>
	</div>

	<%= link_to image_tag("iphone6.jpg", alt: "Rails"), 'http://rubyonrails.org' %>
<% end %>